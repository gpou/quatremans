<svg
   xmlns:svg="http://www.w3.org/2000/svg"
   xmlns="http://www.w3.org/2000/svg"
   xmlns:xlink="http://www.w3.org/1999/xlink"
   version="1.1"
   width="640"
   height="600"
   id="configuracio">
  <defs>
    <%= render 'carts/mostres' %>
    <%= render 'carts/estampats' %>
  </defs>
  <g transform="matrix(1.378377,0,0,1.378377,-20.400559,36.3334)">
    <% @item.producte.configparametres.each do |parametre| %>
      <% parametre.configzones.each do |zona| %>
        <path d="<%=zona.svg%>" id="zona_<%=zona.id%>" style="fill:#990033;fill-opacity:1;stroke:none" class="parametre_<%=parametre.id%> mostra" />
      <% end %>
    <% end %>
    <path d="<%=@item.producte.svg%>" style="fill:#000000;fill-opacity:1" />
  </g>
</svg>