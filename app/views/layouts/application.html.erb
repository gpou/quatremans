<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta http-equiv="content-type" content="application/xhtml+xml; charset=utf-8" />
    <meta name="description" content="<%= yield(:meta_description) %>">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <% if ['compte', 'registrations','confirmations','passwords','sessions','unlocks'].include?(controller.controller_name) %>
      <%= stylesheet_link_tag "users" %>
      <%= javascript_include_tag "users" %>
    <% else %>
      <%= stylesheet_link_tag params[:controller] %>
      <%= javascript_include_tag params[:controller] %>
    <% end %>
    <%= csrf_meta_tags %>
    <%= render 'shared/shim' %>
  </head>
  <body class="<%= yield(:class) %>">
    <a id="dalt" title="Dalt"></a>
    <div class="container">
      <header>
        <%= link_to image_tag("logo.png", alt: t('site_title')), root_path, id: "logo", title: t('site_title') %>
        <div class="titols">
          <%= yield(:titols) %>
        </div>
        <%= render 'shared/header' %>
      </header>
      <div class="content">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </div>
      <%= render 'shared/footer' %>
      
    </div>
    <%= render 'shared/analytics' %>
  </body>
</html>
