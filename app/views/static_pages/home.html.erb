    <%= image_tag("portada/portada_1_2.png") %>
  </div>
  <div id="models">
    <%= image_tag("portada/portada_2.png", class:"activa") %>
    <%= image_tag("portada/portada_2_1.png") %>
  </div>
  <div id="nina">
    <%= image_tag("portada/portada_3.png", class:"activa") %>
    <%= image_tag("portada/portada_3_1.png") %>
  </div>
</div>
