<header>
  <%= link_to image_tag("portada/logo_portada.png", alt: t('site_title')), root_path, id: "logo", title: t('site_title') %>
  <div id="menu">
    <%= link_to coleccions_path, id:"coleccions" do %>
      <span><%= t('coleccions.index.title') %></span>
    <% end %>
    <%= link_to quisom_path, id:"quisom" do %>
      <span><%= t('static_pages.quisom.title') %></span>
    <% end %>
    <a id="idiomes" href="#"><span>Tria l'idioma</span></a>
  </div>
</header>
<div id="fotos">
  <div id="aprendre">
    <%= image_tag("portada/portada_1.png", class:"activa") %>
