  <%= image_tag("portada/portada.png", alt: t('site_title'), usemap: "#map_portada", id: "portada") %>
  <map name="map_portada">
    <area id="area_aprendre" shape="polygon" coords="44,295,109,294,148,312,201,313,245,286,483,280,487,285,470,311,355,428,282,547,217,660,186,691,166,654,165,605,108,455,50,303,44,295" href="<%= coleccions_path %>">
