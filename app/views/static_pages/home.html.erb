<header>
  <h1><%= image_tag("home/logo.png", alt: t('site_title')) %></h1>
  <div id="menu">
    <%= link_to coleccions_path, id:"coleccions_link" do %>
      <span><%= t('coleccions.index.title') %></span>
    <% end %>
    <%= link_to quisom_path, id:"quisom_link" do %>
      <span><%= t('static_pages.quisom.title') %></span>
    <% end %>
    
    <div id="idiomes" class="dropdown">
      <a href="#" id="idiomes_link" class="dropdown-toggle" data-toggle="dropdown">
        <span><%= t('static_pages.quisom.title') %></span>
      </a>
      <ul class="dropdown-menu">
        <% I18n.available_locales.each do |locale| %>
          <li>
            <%= link_to t("meta.language_name", :locale => locale.to_sym), eval("root_#{locale}_path"), :class => (locale==I18n.locale)?"selected":"" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
